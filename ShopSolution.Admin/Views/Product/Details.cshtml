@using ShopSolution.ViewModels.Catalog.Products
@model ProductVm

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-info-circle me-2"></i>
            Chi tiết sản phẩm
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Product" class="text-decoration-none">Danh sách sản phẩm</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">
                        <i class="fas fa-box me-2"></i>
                        Thông tin chi tiết
                    </h5>
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Product">
                        <i class="fas fa-arrow-left me-1"></i>
                        Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <dl class="row">
                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Tên sản phẩm:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">
                                    <h4 class="fw-bold text-primary">@Model.Name</h4>
                                </dd>

                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Mã sản phẩm:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">@Model.Id</dd>

                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Giá bán:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">
                                    <span class="text-danger fw-bold">@Model.Price.ToString("N0") ₫</span>
                                </dd>

                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Giá nhập:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">@Model.OriginalPrice.ToString("N0") ₫</dd>

                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Tồn kho:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">
                                    <span class="badge bg-@((Model.Stock > 0) ? "success" : "danger")">@Model.Stock</span>
                                </dd>
                                <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Mô tả:</dt>
                                <dd class="col-sm-8 col-md-9 col-lg-10">
                                    @Html.Raw(Model.Description)
                                </dd>
                                @if (!string.IsNullOrEmpty(Model.Details))
                                {
                                    <dt class="col-sm-4 col-md-3 col-lg-2 text-md-end">Chi tiết:</dt>
                                    <dd class="col-sm-8 col-md-9 col-lg-10">
                                        @Html.Raw(Model.Details)
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <hr>

                    <div class="mt-3">
                        <h5 class="fw-bold">
                            <i class="fas fa-folder-open me-2"></i>
                            Danh mục:
                        </h5>
                        @if (Model.Categories.Count > 0)
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var category in Model.Categories)
                                {
                                    <li class="list-group-item">@category</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">Sản phẩm chưa thuộc danh mục nào.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        border-radius: 0.5rem;
    }

    .breadcrumb-item a {
        color: #6c757d;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #495057;
    }

    .text-primary {
        color: #0d6efd !important;
    }
</style>