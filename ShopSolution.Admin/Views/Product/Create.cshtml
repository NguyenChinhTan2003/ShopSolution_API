    @model ShopSolution.ViewModels.Catalog.Products.ProductCreateRequest
@{
    ViewData["Title"] = "Tạo mới sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/38.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#Description'), {
                // More configuration options.
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Details'), {
                // More configuration options.
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-box me-2"></i>
            Tạo mới sản phẩm
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Product" class="text-decoration-none">Danh sách sản phẩm</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
            </ol>
        </nav>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0 fw-bold">
                            <i class="fas fa-pencil-alt me-2"></i>
                            Thông tin sản phẩm
                        </h5>
                        <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Product">
                            <i class="fas fa-arrow-left me-1"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Tên sản phẩm</label>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Price" class="form-label">Giá bán</label>
                                <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá bán" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="OriginalPrice" class="form-label">Giá nhập</label>
                                <input asp-for="OriginalPrice" type="number" class="form-control" placeholder="Nhập giá nhập" required />
                                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Stock" class="form-label">Tồn kho</label>
                                <input asp-for="Stock" type="number" class="form-control" placeholder="Nhập số lượng tồn kho" required />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" id="Description" rows="3" class="form-control" placeholder="Nhập mô tả ngắn"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Details" class="form-label">Chi tiết</label>
                            <textarea asp-for="Details" id="Details" rows="5" class="form-control" placeholder="Nhập thông tin chi tiết sản phẩm"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SeoDescription" class="form-label">Seo Description</label>
                                <input asp-for="SeoDescription" class="form-control" placeholder="Nhập mô tả SEO" />
                                <span asp-validation-for="SeoDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SeoTitle" class="form-label">Seo Title</label>
                                <input asp-for="SeoTitle" class="form-control" placeholder="Nhập tiêu đề SEO" />
                                <span asp-validation-for="SeoTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SeoAlias" class="form-label">Seo Alias</label>
                            <input asp-for="SeoAlias" class="form-control" placeholder="Nhập đường dẫn SEO" />
                            <span asp-validation-for="SeoAlias" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ThumbnailImage" class="form-label">Hình ảnh</label>
                            <input asp-for="ThumbnailImage" type="file" class="form-control" required />
                            <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Tạo mới
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: 600;
    }

    .card {
        border-radius: 0.5rem;
    }

    .breadcrumb-item a {
        color: #6c757d;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #495057;
    }

    .text-primary {
        color: #0d6efd !important;
    }
</style>