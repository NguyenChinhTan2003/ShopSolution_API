@model ShopSolution.ViewModels.System.Users.UserDeleteRequest

@{
    ViewData["Title"] = "Xóa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="my-4">Xóa người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Xóa người dùng</li>
    </ol>
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Xóa người dùng</span>
            <a class="btn btn-success btn-sm" asp-action="Index" asp-controller="User">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-8 offset-md-2">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                </dl>

                <form asp-action="Delete" class="needs-validation" novalidate>
                    <input asp-for="Id" type="hidden" />
                    <div class="alert alert-warning" role="alert">
                        Bạn có chắc chắn muốn xóa người dùng này không? Hành động này không thể hoàn tác.
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="User">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb {
        background-color: #f8f9fa;
    }

    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .card {
        border-radius: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }
</style>
