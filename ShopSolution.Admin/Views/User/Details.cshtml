@model ShopSolution.ViewModels.System.Users.UserVm

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-user-circle me-2"></i>
            Chi tiết người dùng
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" class="text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User" class="text-decoration-none">Danh sách người dùng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 fw-bold">Thông tin chi tiết</h5>
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="User">
                        <i class="fas fa-arrow-left me-1"></i>
                        Quay lại
                    </a>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4 text-md-end">
                            @Html.DisplayNameFor(model => model.Dob)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Dob)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .text-primary {
        color: #0d6efd !important;
    }

    .breadcrumb-item a {
        color: #6c757d;
    }

    .breadcrumb-item.active {
        color: #495057;
    }

    .card {
        border-radius: 0.5rem;
    }
</style>