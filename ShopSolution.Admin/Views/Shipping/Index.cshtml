@model List<ShopSolution.ViewModels.Utilities.ShippingVm>

<!DOCTYPE html>
<html>
<head>
    <title>Danh sách phí vận chuyển</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        .btn-danger {
            background-color: #dc3545;
            border: none;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        #msgAlert {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Danh sách phí vận chuyển</h1>
        @if (ViewBag.SuccessMsg != null)
        {
            <div id="msgAlert" class="alert alert-success text-center" role="alert">
                @ViewBag.SuccessMsg
            </div>
        }
        <table class="table table-striped table-hover">
            <thead class="text-center">
                <tr>
                    <th>#</th>
                    <th>Xã/Phường</th>
                    <th>Quận/Huyện</th>
                    <th>Tỉnh/Thành Phố</th>
                    <th>Phí vận chuyển</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.Id</td>
                            <td>@item.Ward</td>
                            <td>@item.District</td>
                            <td>@item.City</td>
                            <td>@item.Price?.ToString("#,##0 VNĐ")</td>
                            <td>
                                <!-- Form Delete -->
                                <form asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                                        Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
